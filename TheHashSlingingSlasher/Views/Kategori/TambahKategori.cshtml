@model List<TheHashSlingingSlasher.Models.KategoriModel>
@{
    ViewBag.Title = "Tambah Kategori";
}
<br />
<br />
<br />
<br />
<h1>Tambah Kategori</h1>
<br />
<br />
<div class="form-horizontal">
    @using (Html.BeginForm())
    {

        <div class="form-group">
            <label class="col-md-2">Kode Kategori</label>
            @Html.TextBox("KodeKategori", null, new { @class = "form-control col-lg-3" })
        </div>

        <div class="form-group">
            <label class="col-md-2">Nama Kategori</label>
            @Html.TextBox("NamaKategori", null, new { @class = "form-control col-lg-3" })
        </div>

        <div class="form-group">
            <label class="col-md-2">Keterangan</label>
            @Html.TextBox("Keterangan", null, new { @class = "form-control col-lg-3" })
        </div>

        <input type="submit" value="Simpan" name="TambahAction" class="btn btn-primary" />
        <input type="submit" value="Batal" name="TambahAction" class="btn btn-primary" />
    }
</div>