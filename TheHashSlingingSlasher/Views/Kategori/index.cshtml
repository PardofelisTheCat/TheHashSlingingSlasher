@model List<TheHashSlingingSlasher.Models.KategoriModel>
@{
    ViewBag.Title = "Index";
}


<h1>Kategori</h1>

<div>
    <table class="table table-striped table-bordered table-hover table-checkable order-column table-responsive">
        <thead class="thead-dark">
            <tr>
                <th><center>Kode Kategori</center></th>
                <th><center>Nama Kategori</center></th>
                <th><center>Keterangan</center></th>
            </tr>
        </thead>
        <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                        <tr>
                            <td>@Model[i].KodeKategori</td>
                            <td>@Model[i].NamaKategori</td>
                            <td>@Model[i].Keterangan</td>
                        </tr>
                }
        </tbody>


    </table>
</div>

<br />
<br />
@using (Html.BeginForm())
{
    <input type="submit" value="Tambahkan" name="ActionBtn" class="btn btn-primary" />
    <input type="submit" value="Hapus" name="ActionBtn" class="btn btn-danger" />
}
